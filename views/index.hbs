<div class="container mt-5">
    <h1 class="text-center">Upload Your File</h1>
    <h3 class="text-center text-muted">Please upload your XLS file below</h3>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form action="/import-xls" method="post" enctype="multipart/form-data" id="uploadForm">
                <div class="form-group">
                    <label for="fileUpload" class="lead">Drag and drop your file here or click to select a file</label>
                    <input class="form-control form-control-lg" id="fileUpload" name="fileUpload" type="file" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-lg mt-3">Upload File</button>
            </form>
        </div>
    </div>
</div>

